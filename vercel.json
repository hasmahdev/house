{
  "version": 2,
  "builds": [
    { "src": "api/[...path].ts", "use": "@vercel/node" },
    { "src": "dist/spa/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/[...path]" },
    { "src": "/(.*)", "dest": "/dist/spa/index.html" }
  ],
  "ignoreCommand": "pnpm install --prefer-offline --frozen-lockfile",
  "env": {
    "NODE_ENV": "production"
  }
}

